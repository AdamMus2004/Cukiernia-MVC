@{
    ViewData["Title"] = "Potwierdzenie";
    var produkt = ViewBag.Produkt as CukierniaAdamMus.Models.Produkt;
}

<h1>Potwierdzenie zamówienia</h1>

<div class="card">
    <div class="card-body">
        <h3>Czy na pewno chcesz zamówić ten produkt?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Produkt:</dt>
            <dd class="col-sm-10"><strong>@produkt.Nazwa</strong></dd>

            <dt class="col-sm-2">Cena:</dt>
            <dd class="col-sm-10">@produkt.Cena zł</dd>

            <dt class="col-sm-2">Opis:</dt>
            <dd class="col-sm-10">@produkt.Opis</dd>
        </dl>

        <form asp-action="Create">
            <input type="hidden" name="produktId" value="@produkt.ProduktId" />

            <input type="submit" value="POTWIERDZAM I ZAMAWIAM" class="btn btn-success btn-lg" />
            <a asp-controller="Produkty" asp-action="Index" class="btn btn-secondary btn-lg">Anuluj</a>
        </form>
    </div>
</div>